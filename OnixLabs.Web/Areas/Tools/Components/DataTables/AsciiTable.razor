@page "/Tools/Ascii-Table"
@layout ToolsLayout

<Card>
    <CardHeader Class="fw-semibold">
        ASCII Character Reference
    </CardHeader>
    <div class="card-body p-0 pb-3">
        <table class="table table-hover mb-0">
            <thead>
            <tr>
                <th scope="col">Decimal</th>
                <th scope="col">Binary</th>
                <th scope="col">Octal</th>
                <th scope="col">Hexadecimal</th>
                <th scope="col">Unicode</th>
                <th scope="col" class="text-end">Character</th>
            </tr>
            </thead>
            <tbody>
            @for (int index = 0; index <= byte.MaxValue; index++)
            {
                <tr class="font-monospace">
                    <td>@index.FormatDecimal()</td>
                    <td class="text-secondary">@index.FormatBinary()</td>
                    <td class="text-warning">@index.FormatOctal()</td>
                    <td class="text-info">@index.FormatHexadecimal()</td>
                    <td class="text-primary">@index.FormatUnicode()</td>
                    <td class="text-danger text-end dos-glyph">@index.FormatCharacter()</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</Card>