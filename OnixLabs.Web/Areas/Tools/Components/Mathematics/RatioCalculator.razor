@page "/Tools/Ratio-Calculator"
@layout ToolsLayout

<PageTitle>ONIXLabs | Ratio Calculator</PageTitle>

<Card>
    <CardHeader>Ratio Calculator</CardHeader>
    <CardBody>
        <Row>
            <div class="col">
                <NumberInput @bind-Value="firstAntecedent" Label="First Antecedent"
                             OnIncrementClicked="IncrementFirstAntecedent"
                             OnDecrementClicked="DecrementFirstAntecedent"/>
            </div>
            <div class="col-auto d-flex justify-content-center align-items-center">
                <span class="h4 m-0">:</span>
            </div>
            <div class="col">
                <NumberInput @bind-Value="firstConsequent" Label="First Consequent"
                             OnIncrementClicked="IncrementFirstConsequent"
                             OnDecrementClicked="DecrementFirstConsequent"/>
            </div>
        </Row>
        <Row Class="my-3">
            <div class="col d-flex justify-content-center">
                <button @onclick="ToggleAntecedentLock"
                        type="button"
                        class="btn btn-fixed btn-outline-secondary"
                        data-bs-toggle="button"
                        tabindex="-1">
                    <i class="fa-solid @IfElse(isAntecedentLocked, "fa-lock", "fa-lock-open")"></i>
                </button>
            </div>
            <div class="col-auto"></div>
            <div class="col d-flex justify-content-center">
                <button @onclick="ToggleConsequentLock"
                        type="button"
                        class="btn btn-fixed btn-outline-secondary"
                        data-bs-toggle="button"
                        tabindex="-1">
                    <i class="fa-solid @IfElse(isConsequentLocked, "fa-lock", "fa-lock-open")"></i>
                </button>
            </div>
        </Row>
        <Row>
            <div class="col">
                <NumberInput @bind-Value="secondAntecedent" Label="Second Antecedent"
                             OnIncrementClicked="IncrementSecondAntecedent"
                             OnDecrementClicked="DecrementSecondAntecedent"/>
            </div>
            <div class="col-auto d-flex justify-content-center align-items-center">
                <span class="h4 m-0">:</span>
            </div>
            <div class="col">
                <NumberInput @bind-Value="secondConsequent" Label="Second Consequent"
                             OnIncrementClicked="IncrementSecondConsequent"
                             OnDecrementClicked="DecrementSecondConsequent"/>
            </div>
        </Row>
    </CardBody>
    <CardFooter Class="py-3 d-flex justify-content-end">
        <button @onclick="Calculate" class="btn btn-min-width btn-secondary" type="button">Calculate</button>
    </CardFooter>
</Card>
