<div class="d-flex flex-column col-12 col-md-6 col-lg-3 mt-5">
    <Card Class="d-flex flex-column flex-fill rounded-4 p-2">
        <img class="rounded-2 w-100" src="@Image" alt="@Name">
        <div class="d-flex flex-column flex-fill text-start mt-3">
            <span class="h4">@Name</span>
            <span class="h6 text-secondary">@Title</span>
            <p class="text-secondary-emphasis flex-fill">@ChildContent</p>
        </div>
        <div class="btn-group w-100" role="group" aria-label="Basic example">
            <NavLink class="btn btn-secondary" href="@InfoUrl">
                <i class="fa-solid fa-square-plus"></i>
            </NavLink>
            <NavLink class="btn btn-dark" href="@GitHubUrl"
                     target="_blank" rel="noopener noreferrer">
                <i class="fa-brands fa-square-github"></i>
            </NavLink>
            <NavLink class="btn btn-primary" href="@LinkedInUrl"
                     target="_blank" rel="noopener noreferrer">
                <i class="fa-brands fa-linkedin"></i>
            </NavLink>
        </div>
    </Card>
</div>