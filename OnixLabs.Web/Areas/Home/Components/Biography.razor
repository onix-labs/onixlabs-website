<Container>
    <Section>
        <Row>
            <div class="col-3">
                <Card Class="rounded-4 p-2">
                    <img class="rounded-2" src="@ImageUrl" alt="@Heading"/>
                    <div class="d-flex flex-row justify-content-evenly gap-2 mt-2">
                        <NavLink class="btn btn-primary w-100" href="@LinkedInUrl"
                                 target="_blank" rel="noopener noreferrer">
                            <i class="fa-brands fa-linkedin"></i>
                            <span class="ms-2">LinkedIn</span>
                        </NavLink>
                        <NavLink class="btn btn-dark w-100" href="@GitHubUrl"
                                 target="_blank" rel="noopener noreferrer">
                            <i class="fa-brands fa-github"></i>
                            <span class="ms-2">GitHub</span>
                        </NavLink>
                    </div>
                </Card>
            </div>
            <div class="col-9">
                <h1 class="display-2 fw-bold">@Heading</h1>
                <h2 class="fw-light text-secondary">@SubHeading</h2>
                <div class="mt-3">
                    @ChildContent
                </div>
            </div>
        </Row>
    </Section>
</Container>